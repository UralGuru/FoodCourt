{
  "extends": [
    "stylelint-config-standard",
    "stylelint-order-config-standard",
    "stylelint-config-prettier",
    "stylelint-config-standard-scss"
  ],
  "plugins": ["stylelint-order", "stylelint-scss"],
  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "block-no-empty": null
  }
}
